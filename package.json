{
  "name": "b3hpictool",
  "version": "0.1.0",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "bun run dev:preload:build && concurrently -k \"bun run dev:renderer\" \"bun run dev:main:build\" \"bun run dev:main:start\"",
    "dev:renderer": "vite",
    "dev:main:build": "bun build src/main/main.ts --outfile dist/main.js --target node --external electron --watch",
    "dev:preload:build": "bun scripts/build-preload.ts",
    "dev:main:start": "bun run electron .",
    "build": "bun run build:renderer && bun run build:main && bun run build:preload",
    "build:renderer": "vite build",
    "build:main": "bun build src/main/main.ts --outfile dist/main.js --target node --external electron",
    "build:preload": "bun scripts/build-preload.ts",
    "start": "bun run electron .",
    "dist": "bun run build && electron-builder",
    "test": "vitest"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "electron-store": "^8.2.0",
    "framer-motion": "^11.0.3",
    "i18next": "^23.8.2",
    "lucide-react": "^0.323.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.4.0",
    "react-i18next": "^14.0.5",
    "react-router-dom": "^7.13.0",
    "tailwind-merge": "^2.2.1",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "jsdom": "^28.0.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.b3hpictool.app",
    "productName": "B3hPicTool",
    "directories": {
      "output": "release/v0.1"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      "resources/**/*"
    ],
    "win": {
      "target": "nsis",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}